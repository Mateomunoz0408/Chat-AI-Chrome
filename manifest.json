{
  "manifest_version": 2,
  "name": "ChatAI Copilot",
  "version": "1.0",
  "description": "ChatGPT Copilot",
  "permissions": [
    "activeTab",
    "tabs"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "imagenes/icon16.png",
      "48": "imagenes/icon48.png",
      "128": "imagenes/icon128.png"
    }
  },
  "icons": {
    "16": "imagenes/icon16.png",
    "48": "imagenes/icon48.png",
    "128": "imagenes/icon128.png"
  }
}
